<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>JoomSocialLogin!</name>
    <author>Stavros Zavrakas</author>
    <creationDate>22.03.2014</creationDate>
    <copyright>(C) 2014 - 2014 Stavros Zavrakas</copyright>
    <license>This module is released under the GNU/GPL License</license>
    <authorEmail>stavros@zavrakas.me</authorEmail>
    <authorUrl>stavros.zavrakas.gr</authorUrl>
    <version>1.0.0 BETA1</version>
    <description>MOD_JOOMSOCIAL_DESC</description>
    <files>
        <folder>fbSrc</folder>
        <folder>googleSrc</folder>
        <folder>languages</folder>
        <filename>mod_joomfblogin.xml</filename>
        <filename module="mod_joomfblogin">mod_joomfblogin.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
        <filename>facebookHelper.php</filename>
        <filename>googleHelper.php</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
    <languages>
        <language tag="en-GB">languages/en-GB.mod_joomfblogin.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="General">
                <field name="moduleclass_sfx" type="text" label="GENERAL_CLASS_SUFFIX_LABEL" description="GENERAL_CLASS_SUFFIX_DESC"/>
            </fieldset>
            <fieldset name="Facebook">
                <field name="fb_is_enabled" type="checkbox" label="FACEBOOK_ENABLED_LABEL" description="FACEBOOK_ENABLED_DESC" value="true" default="0" />
                <field name="fb_app_secret" type="text" label="FACEBOOK_APP_SECRET_LABEL" description="FACEBOOK_APP_SECRET_DESC"/>
                <field name="fb_app_id" type="text" label="" description=""/>
                <field name="fbButtonText" type="text" label="FACEBOOK_BUTTON_TEXT_LABEL" description="FACEBOOK_BUTTON_TEXT_DESC"/>
                <field name="fbButton" type="list" default="xlarge" label="FACEBOOK_BUTTON_SIZE_LABEL" description="">
                    <option value="icon">FACEBOOK_BUTTON_SIZE_OP1</option>
                    <option value="small">FACEBOOK_BUTTON_SIZE_OP2</option>
                    <option value="medium">FACEBOOK_BUTTON_SIZE_OP3</option>
                    <option value="large">FACEBOOK_BUTTON_SIZE_OP4</option>
                    <option value="xlarge">FACEBOOK_BUTTON_SIZE_OP5</option>
                </field>
            </fieldset>
            <fieldset name="Google">
                <field name="google_is_enabled" type="checkbox" label="Enable Google Login" description="Check if you want to enable google login for your website" value="true" default="0" />
                <field name="google_app_secret" type="text" label="Google App Secret" description="Please enter the Google Application Secret"/>
                <field name="google_app_id" type="text" label="Google AppId" description="Please enter the Google Application ID"/>
                <field name="googleButtonText" type="text" label="Google Button Text" description="Please enter the text that you want to appear on the google button"/>
            </fieldset>
        </fields>
    </config>
</extension>